<%- include("header") -%>

<body>
  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <!-- BODY -->
  <div class="box">

    <% newDuty.forEach((item) => { %>
    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()">
        <p><%= item.name %></p>
      </div>
      <input type="hidden" name="listName" value="<%= listTitle %>">
    </form>


    <% }); %>

    <!-- INPUT -->
    <form class="item" action="/" method="post">
      <input type="text" name="nextToDo" placeholder="New Item" autocomplete="off">
      <button id="buttonList" type="submit" name="list" value="<%=listTitle%>">+</button>
    </form>

  </div>


</body>

<%- include("footer") -%>
